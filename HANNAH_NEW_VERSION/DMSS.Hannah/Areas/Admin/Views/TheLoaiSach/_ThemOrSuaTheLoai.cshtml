
@model DATA.Models.TheLoai

<div class="modal-body">
    <div class="text-center mt-2 mb-4">
        <h2 id="tieude">
            Edit Genre
        </h2>
    </div>

    <form class="pl-5 pr-5" action="#" id="frmThemOrSua">

        <div class="form-group">
            <label for="categoryname">
                @Html.DisplayNameFor(model => model.TenTheLoai)
            </label>
            <input class="form-control" type="text" value="@Model.TenTheLoai" id="name" name="categoryname" >
        </div>

        <div class="form-group">
            <label for="Categories">@Html.DisplayNameFor(model => model.HangMuc)</label>
            <input class="form-control" type="text" value="@Model.HangMuc" id="categories" name="categories"
                  >
        </div>

        <div class="form-group">
            <label for="image">@Html.DisplayNameFor(model => model.Icon)</label>
            <div class="container">
                <div class="preview">
                    <img class="img-icon" id="img-preview" src="@Model.Icon" />
                    <input id="save-img" hidden value="@Model.Icon" />
                    <div class="label-icon" onclick="onCkfider()" for="file-input">Upload Image</div>
                    <input accept="image/*" type="file" id="file-input"  />
                </div>
            </div>

        </div>

        <div class="form-group" id="form-name">
            <label for="Describe">@Html.DisplayNameFor(model => model.MoTa)</label>
            <textarea class="ckeditor" name="description"
                      id="description" >@Model.MoTa</textarea>
        </div>
        <div hidden id="trangthai">
            @Model.TrangThai
        </div>
        <div class="form-group">
            <label for="bookitemidentifier">
                @Html.DisplayNameFor(model => model.MaNhanDienHangMucSach)
            </label>
            <select class="form-control" type="text" name="bookitemidentifier"
                    id="bookitemidentifier" >

                @foreach (var item in ViewBag.HangMucSach)
                {
                if (item.MaNhanDienHangMucSach == Model.MaNhanDienHangMucSach)
                {
                <option value="@Model.MaNhanDienHangMucSach" selected>@Model.MaNhanDienHangMucSach </option>
                }
                else
                {
                <option>@item.MaNhanDienHangMucSach </option>
                }
                }
            </select>


        </div>
        <div class="form-group" id="form-name">
            <label for="SEOContent">
                @Html.DisplayNameFor(model => model.NoiDungSeo)
            </label>
            <textarea class="ckeditor" type="text" name="seocontent"
                      id="seocontent" >@Model.NoiDungSeo</textarea>
        </div>
        <div class="form-group">
            <label for="SEOKeyWord">
                @Html.DisplayNameFor(model => model.TuKhoaSeo)
            </label>
            <input class="form-control" value="@Model.TuKhoaSeo" type="text" name="seokeyword"
                   id="seokeyword" >
        </div>
        <div class="form-group">
            <label for="SEOTitle">
                @Html.DisplayNameFor(model => model.TieuDeSeo)
            </label>
            <input class="form-control" type="text"
                   id="seotitle" value="@Model.TieuDeSeo" name="seotitle" >

        </div>
        <div class="form-group">
            <label for="seolink">
                @Html.DisplayNameFor(model => model.DuongDanSeo)
            </label>
            <input class="form-control" type="text"
                   id="seolink" value="@Model.DuongDanSeo" name="seolink">

        </div>

        <div class="form-group text-center">
            <div class="btn btn-primary" id="btnsumit" onclick="ThemOrSuaTheLoai(@Model.MaTheLoai, '/Admin/TheLoaiSach/_DanhSachTheLoaiSach')">
                Update
            </div>
        </div>

    </form>

</div>
