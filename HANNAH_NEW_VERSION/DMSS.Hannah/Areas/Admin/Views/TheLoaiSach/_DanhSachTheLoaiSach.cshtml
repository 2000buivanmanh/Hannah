@model IEnumerable<DATA.Models.TheLoai>

<table id="tableLoad" class="table table-striped table-bordered no-wrap" style="width:100%">
    <thead>
        <tr>
            <th>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="checkall" value="false" onclick="SelectAll()"><span class="checkbox-material"><span class="check "></span></span>
                    </label>
                </div>
            </th>
            <th>@Html.DisplayNameFor(model => model.TenTheLoai)</th>
            <th>@Html.DisplayNameFor(model => model.HangMuc)</th>
            <th>@Html.DisplayNameFor(model => model.Icon)</th>
            <th>@Html.DisplayNameFor(model => model.MaNhanDienHangMucSach)</th>
            <th>@Html.DisplayNameFor(model => model.TrangThai)</th>
            <th>@Html.DisplayNameFor(model => model.MoTa)</th>
            <th>@Html.DisplayNameFor(model => model.DuongDanSeo)</th>
            <th>@Html.DisplayNameFor(model => model.TieuDeSeo)</th>
            <th>Edit</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" data-id="@item.MaTheLoai" class="check-field" value="false" id="check-@item.MaTheLoai" onclick="Check(@item.MaTheLoai)"><span class="checkbox-material"><span class="check"></span></span>
                        </label>
                    </div>

                </td>
                <td>
                    @item.TenTheLoai
                </td>
                <td>
                    @item.HangMuc
                </td>
                <td>
                    <div class="text-center">
                        <img class="img-icon-ul " src="@item.Icon" />
                    </div>


                </td>

                <td>
                    @item.MaNhanDienHangMucSach
                </td>
                <td>
                    <input type="checkbox" class="check-toggle" data-style="ios" data-on="Public" @(item.TrangThai == DATA.Constant.Constant.TinhTrang.Activating ? "checked" : "" )
                           onchange="CheckTrangThai(@item.MaTheLoai ,'/Admin/TheLoaiSach/CapNhatTinhTrang')"
                           data-off="Block" data-onstyle="success" data-offstyle="danger" data-toggle="toggle" data-size="sm">

                </td>
                <td>
                    @Html.Raw(item.MoTa)
                </td>
                <td>
                    @item.DuongDanSeo
                </td>
                <td>
                    @item.TieuDeSeo
                </td>
                <td>
                    <div class="" id='@item.MaTheLoai' type="submit" data-toggle="modal" onclick="ModalThemSua('/Admin/TheLoaiSach/_ThemOrSuaTheLoai',@item.MaTheLoai)">
                        <i class="fas fa-edit text-center"></i>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
