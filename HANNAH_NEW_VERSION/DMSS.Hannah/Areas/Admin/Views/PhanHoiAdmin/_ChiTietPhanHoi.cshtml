
@model DATA.Models.PhanHoi

<div class="modal-body">
    <div class="text-center mt-2 mb-4">
        <h2 id="tieudefb">
            Detailed Feedback
        </h2>
    </div>

    <form class="pl-5 pr-5" action="#" id="frmThemOrSua">

        <div class="form-group">
            <label for="sendername">
                @Html.DisplayNameFor(model => model.TenNguoiGui)
            </label>
            <input class="form-control" type="text" readonly value="@Model.TenNguoiGui" id="name" name="sendername" >
        </div>

        <div class="form-group">
            <label for="Email">@Html.DisplayNameFor(model => model.Email)</label>
            <input class="form-control" type="text" readonly value="@Model.Email" id="email" name="email">
        </div>
        <div hidden id="status">
            @Model.TrangThai
        </div>

        <div class="form-group">
            <label for="phonenumber">
                @Html.DisplayNameFor(model => model.SDT)
            </label>
            <input class="form-control" readonly value="@Model.SDT" type="text" name="phonenumber"
                   id="phonenumber" >
        </div>
        <div class="form-group">
            <label for="feedbackcontent">
                @Html.DisplayNameFor(model => model.NoiDungPhanHoi)
            </label>
            <input class="form-control" readonly type="text"
                   id="feedbackcontent" value="@Model.NoiDungPhanHoi" name="feedbackcontent" >

        </div>
        <div class="form-group">
            <label for="sentdate">
                @Html.DisplayNameFor(model => model.NgayGui)
            </label>
            <input class="form-control" readonly type="text"
                   id="sentdate" value="@Model.NgayGui" name="sentdate" >

        </div>
        <div class="form-group" id="form-name">
            <label for="replyfeedback">
                @Html.DisplayNameFor(model => model.NoiDungXuLy)
            </label>
            <textarea class="ckeditor" type="text" name="replyfeedback"
                      id="replyfeedback" >@Html.Raw(Model.NoiDungXuLy)</textarea>
        </div>
        <div class="form-group text-center">
            <div class="btn btn-primary" id="btnsumitfb" onclick="TraLoiFeedback(@Model.MaPhanHoi, '/Admin/PhanHoiAdmin/_DanhSachPhanHoi')">
                Send
            </div>
        </div>

    </form>

</div>
