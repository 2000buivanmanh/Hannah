@model IEnumerable<DATA.Models.Slide>

<table id="tableLoad" class="table table-striped table-bordered no-wrap" style="width:100%">
    <thead>
        <tr>
            <th>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" id="checkall" value="false" onclick="SelectAll()"><span class="checkbox-material"><span class="check "></span></span>
                    </label>
                </div>
            </th>
            <th>@Html.DisplayNameFor(model => model.TenSlide)</th>
            <th>@Html.DisplayNameFor(model => model.AnhSlide)</th>
            <th>@Html.DisplayNameFor(model => model.TieuDe)</th>
            <th>@Html.DisplayNameFor(model => model.MoTa)</th>
            <th>@Html.DisplayNameFor(model => model.NoiDung)</th>
            <th>@Html.DisplayNameFor(model => model.TieuDeHienThi)</th>
            <th>@Html.DisplayNameFor(model => model.NoiDungHienThi)</th>
            <th>@Html.DisplayNameFor(model => model.MoTaHienThi)</th>
            <th>@Html.DisplayNameFor(model => model.TrangThai)</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" data-id="@item.MaSlide" class="check-field" value="false" id="check-@item.MaSlide" onclick="Check(@item.MaSlide)"><span class="checkbox-material"><span class="check"></span></span>
                    </label>
                </div>
            </td>
            <td>
                @item.TenSlide
            </td>
            <td>
                <img src="@item.AnhSlide" width="200" height="100" />
            </td>
            <td>
                <div>
                    @Html.Raw(@item.TieuDe)
                </div>
            </td>
            <td>
                <div>
                    @Html.Raw(item.MoTa)
                </div>
            </td>
            <td>
                <div>
                    @Html.Raw(item.NoiDung)
                </div>
            </td>
            <td>
                <p> <i class="@(item.TieuDeHienThi == DATA.Constant.Constant.TinhTrang.Activating? "text-success fa fa-circle" : "text-danger fa fa-circle")"></i> @(item.TieuDeHienThi == DATA.Constant.Constant.TinhTrang.Activating? "Display" : "Hidden")</p>
            </td>
            <td>
                <p> <i class="@(item.NoiDungHienThi == DATA.Constant.Constant.TinhTrang.Activating? "text-success fa fa-circle" : "text-danger fa fa-circle")"></i> @(item.NoiDungHienThi == DATA.Constant.Constant.TinhTrang.Activating? "Display" : "Hidden")</p>
            </td>
            <td>
                <p> <i class="@(item.MoTaHienThi == DATA.Constant.Constant.TinhTrang.Activating? "text-success fa fa-circle" : "text-danger fa fa-circle")"></i> @(item.MoTaHienThi == DATA.Constant.Constant.TinhTrang.Activating? "Display" : "Hidden")</p>
            </td>
            <td>
                <input type="checkbox" class="check-toggle" data-style="ios" data-on="Public" @(item.TrangThai == DATA.Constant.Constant.TinhTrang.Activating ? "checked" : "" )
                       onchange="CheckTrangThai(@item.MaSlide ,'/Admin/Slide/CapNhatTinhTrang')"
                       data-off="Block" data-onstyle="success" data-offstyle="danger" data-toggle="toggle" data-size="sm">

            </td>
            <td>

                <div class="" id='@item.MaSlide' type="submit" data-toggle="modal" onclick="ModalThemSua('/Admin/Slide/_ThemOrSuaSlide',@item.MaSlide)">
                    <i class="fas fa-edit text-center"></i>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
