
@model DATA.Models.Slide


<div class="modal-body">
    <div class="text-center mt-2 mb-4">
        <h2 id="tieude">
            Edit Genre
        </h2>
    </div>

    <form class="pl-5 pr-5" action="#" id="frmThemOrSua">

        <div class="form-group">
            <label for="slidename">
                @Html.DisplayNameFor(model => model.TenSlide)
            </label>
            <input class="form-control" type="text" value="@Model.TenSlide" id="name" name="slidename">
        </div>
        <div class="form-group">
            <label for="image">@Html.DisplayNameFor(model => model.AnhSlide)</label>
            <div class="container">
                <div class="preview">
                    <img class="img-icon" id="img-preview" src="@Model.AnhSlide" />
                    <input id="save-img" hidden value="@Model.AnhSlide" />
                    <div class="label-icon" onclick="onCkfider()" for="file-input">Upload Image</div>
                    <input accept="image/*" type="file" id="file-input" />
                </div>
            </div>

        </div>


        <div class="form-group" id="form-name">
            <label for="Describe">@Html.DisplayNameFor(model => model.MoTa)</label>
            <textarea class="ckeditor" name="description"
                      id="description">@Model.MoTa</textarea>
        </div>
        <div hidden id="trangthai">
            @Model.TrangThai
        </div>
        <div class="form-group">
            <label for="title">@Html.DisplayNameFor(model => model.TieuDe)</label>
            <input class="form-control" type="text" value="@Model.TieuDe" id="title" name="title">
        </div>
        <div class="form-group" id="form-name">
            <label for="content">
                @Html.DisplayNameFor(model => model.NoiDung)
            </label>
            <textarea class="ckeditor" type="text" name="content"
                      id="content">@Model.NoiDung</textarea>
        </div>


                <div class="form-group">
                    <label style="color:black">@Html.DisplayNameFor(model => model.TieuDeHienThi)</label>
                    <select class="form-control" id="displaytitle">
                        @if (Model.TieuDeHienThi == true)
                        {
                            <option selected="selected" value="true">Show content</option>
                            <option value="false">Hide content</option>
                        }
                        else
                        {
                            <option selected="selected" value="false">Hide content</option>
                            <option value="true">Show content</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label style="color:black"> @Html.DisplayNameFor(model => model.NoiDungHienThi)</label>
                    <select class="form-control" id="displaycontent">
                        @if (Model.NoiDungHienThi == true)
                        {
                            <option selected="selected" value="true">Show content</option>
                            <option value="false">Hide content</option>
                        }
                        else
                        {
                            <option selected="selected" value="false">Hide content</option>
                            <option value="true">Show content</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label style="color:black"> @Html.DisplayNameFor(model => model.MoTaHienThi)</label>
                    <select class="form-control" id="displaydescription">
                        @if (Model.MoTaHienThi == true)
                        {
                            <option selected="selected" value="true">Show content</option>
                            <option value="false">Hide content</option>
                        }
                        else
                        {
                            <option selected="selected" value="false">Hide content</option>
                            <option value="true">Show content</option>
                        }
                    </select>
                </div>


        <div class="form-group text-center">
            <div class="btn btn-primary" id="btnsumit" onclick="ThemOrSuaSlide(@Model.MaSlide, '/Admin/Slide/_DanhSachSlide')">
                Update
            </div>
        </div>

    </form>

</div>
