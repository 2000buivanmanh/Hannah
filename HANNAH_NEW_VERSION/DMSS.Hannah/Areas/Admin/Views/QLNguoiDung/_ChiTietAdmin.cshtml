
@model DATA.Models.NguoiDung

<div class="modal-body">
    <div class="text-center mt-2 mb-4">
        <h2 id="tieude">
            Details Users
        </h2>
    </div>

    <form class="pl-5 pr-5" action="#" id="frmThemOrSua">

        <div class="form-group">
            <label for="fullname">
                @Html.DisplayNameFor(model => model.HoTen)<span id="sao"> *</span>
            </label>
            <input class="form-control" type="text" readonly id="fullname" value="@Model.HoTen" name="fullname" placeholder="Full Name">
        </div>

        <div class="form-group">
            <label for="username">@Html.DisplayNameFor(model => model.TenDangNhap)<span id="sao"> *</span></label>
            <input class="form-control" type="text" readonly value="@Model.TenDangNhap" id="username" name="username"
                   placeholder="User Name">
        </div>
        <div class="form-group">
            <label for="Email">
                @Html.DisplayNameFor(model => model.EmailNguoiDung)<span id="sao"> *</span>
            </label>
            <input class="form-control" type="text" readonly value="@Model.EmailNguoiDung" name="email"
                   id="email" placeholder="Email">
        </div>
        <div class="form-group">
            <label class="small mb-1" for="passwordUpdate">New Password</label>
            <input type="password" class="form-control" id="passwordUpdate" name="passwordUpdate">
        </div>
        <div class="form-group">
            <label class="small mb-1" for="inputPhone">Confirm Password</label>
            <input class="form-control" id="confirmpasswordUpdate" name="confirmpasswordUpdate">
        </div>
        <div class="form-group">
            <label for="image">@Html.DisplayNameFor(model => model.AnhDaiDien)</label>
            <div class="container">
                <div class="preview">
                    <img class="img-icon" id="img-preview" src="@Model.AnhDaiDien" />
                    <input id="save-img" hidden value="@Model.AnhDaiDien" />
                    <div class="label-icon" onclick="onCkfider()" for="file-input">Upload Image</div>
                    <input accept="image/*" type="file" id="file-input" />
                </div>
            </div>

        </div>
        <div class="form-group">
            <label for="phone">
                @Html.DisplayNameFor(model => model.SoDienThoai)
            </label>
            <input type="number" value="@Model.SoDienThoai" class="form-control" maxlength="10" id="phone" name="phone" placeholder="Phone Number">

        </div>
        <div class="form-group">
            <label for="dob">@Html.DisplayNameFor(model => model.NgaySinh)</label>
            <input class="form-control" type="date" id="dob"  value="@Model.NgaySinh.Value.Date.ToString("yyyy-MM-dd")" name="dob" placeholder="Date Of Birth">


        </div>
        <div class="form-group">
            <label for="address">@Html.DisplayNameFor(model => model.DiaChi)</label>
            <input class="form-control" type="text" id="address" name="address" value="@Model.DiaChi">

        </div>

        <input hidden id="idnguoidung" value="@Model.MaNguoiDung">
        <input hidden id="eruditepoin" value="@Model.DiemTichLuy">
        <div class="form-group text-center">
            <div class="btn btn-primary" id="btnsumit" onclick="ThemOrSuaNguoiDung(@Model.MaNguoiDung, '/Admin/QLNguoiDung/_DanhSachNguoiDung')">
                Update
            </div>
        </div>

    </form>

</div>
