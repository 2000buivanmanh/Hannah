

@model DATA.Models.HangMucSach

<div class="modal-body">
    <div class="text-center mt-2 mb-4">
        <h2 id="tieude">
        </h2>
    </div>

    <form class="pl-5 pr-5" action="#" id="frmThemOrSua">

        <div class="form-group">
            <label for="categoriesname">
                @Html.DisplayNameFor(model => model.TenHangMuc)
            </label>
            <input class="form-control" type="text" value="@Model.TenHangMuc" id="name" name="categoriesname" >
        </div>

        <div class="form-group">
            <label for="bookcatalogcode">@Html.DisplayNameFor(model => model.MaNhanDienHangMucSach)</label>
            <input class="form-control" type="text" value="@Model.MaNhanDienHangMucSach" id="bookcatalogcode" name="bookcatalogcode">
        </div>

        <div class="form-group" id="form-name">
            <label for="Describe">@Html.DisplayNameFor(model => model.MoTa)</label>
            <textarea class="ckeditor" name="description"
                      id="description" >@Model.MoTa</textarea>
        </div>
        <div hidden id="trangthai">
            @Model.TrangThai
        </div>
        <div class="form-group" id="form-name">
            <label for="SEOContent">
                @Html.DisplayNameFor(model => model.NoiDungSeo)
            </label>
            <textarea class="ckeditor" type="text" name="seocontent"
                      id="seocontent" >@Model.NoiDungSeo</textarea>
        </div>
        <div class="form-group">
            <label for="SEOKeyWord">
                @Html.DisplayNameFor(model => model.TuKhoaSeo)
            </label>
            <input class="form-control" value="@Model.TuKhoaSeo" type="text" name="seokeyword"
                   id="seokeyword" >
        </div>
        <div class="form-group">
            <label for="SEOTitle">
                @Html.DisplayNameFor(model => model.TieuDeSeo)
            </label>
            <input class="form-control" type="text"
                   id="seotitle" value="@Model.TieuDeSeo" name="seotitle" >

        </div>
        <div class="form-group">
            <label for="seolink">
                @Html.DisplayNameFor(model => model.DuongDanSeo)
            </label>
            <input class="form-control" type="text"
                   id="seolink" value="@Model.DuongDanSeo" name="seolink" >

        </div>


        <div class="form-group text-center">
            <div class="btn btn-primary" id="btnsumit" onclick="ThemOrSuaHangMuc(@Model.MaHangMucSach, '/Admin/HangMucSach/_DanhSachHangMucSach')">
            </div>
        </div>

    </form>

</div>
