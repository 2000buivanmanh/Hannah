<div class="col-md-3 register-left">
    <img src="~/Content/Images/Top-header/login.png" />
</div>
<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
<div class="col-md-9 register-right">
    <div class="tab-content-register" id="myTabContent">
        <div class="row register-form-login">
            <p class="tilte-name-form" id="tilte-name-form">Lost your password ?</p>
            <div class="form-group">
                <label id="Label-Username" class="Label-Username">Email <span style="color:red">*</span> </label>
                <input type="text" id="Inp-Username" class="form-control" placeholder="Enter your email here ..." value="" />
            </div>
            <div class="form-group" style="display:flex">
                <div class="col">
                    <input type="submit" class="button btnSubmit" id="btnLogin" name="login" onclick="ChooseLostPassword()" value="Get new password">
                </div>
            </div>
        </div>
    </div>
</div>