<div id="main" class="site-main">
    <div class="page_content single_sidebar">
        <div class='left-pattern pattern pattern-2'></div>
        <div class='container'>
            <aside class='sb_right'>
                <div class="cws-widget">
                    <form method="get" class="search-form" action="#">
