<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<div class="col-md-3 register-left">
    <img src="~/Content/Images/Top-header/login.png" />
</div>
<button type="button" class="close" data-dismiss="modal"
        aria-hidden="true">
    ×
</button>
<div class="col-md-9 register-right">
    <div class="tab-content-register">
        <div class="row register-form-login">
            <form id="frmLogin" action="" method="post">
                <p class="tilte-name-form" id="tilte-name-form">Login Hannah Library</p>
                <div class="form-group">
                    <label for="username">Username or Email</label>
                    <input type="text" id="username-lg" name="username" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password-lg" name="password" />
                    <i style="margin-left: -30px; cursor: pointer" class="bi bi-eye-slash" id="togglePassword"></i>
                </div>
                <div class="form-group">
                    <a style="margin-left:10px; float:left" onclick="OpenModalUser('NguoiDung/_LostPassword')" class="button wc-forward account">Lost Password ?</a>
                    <br />
                    <a class="btn btnSubmit" onclick="Login()">Login</a> <br />
                </div>
                <br />
                <p class="text--center"> Not a member? <a onclick="OpenModalUser('NguoiDung/_Register')">Sign up now</a>
            </form>
        </div>
    </div>
</div>
