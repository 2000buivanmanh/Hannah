@model DATA.Models.CaiDat
@{
    var NguoiDung = ViewBag.NguoiDung as DATA.Models.NguoiDung;
}
<div class="container">
    <div class="row_text_search">
        <div id="top_panel_text">
            <a href="#"><i class="fa fa-phone-square"></i> @Model.SDTLienHe </a>
            <a href="#"> <i class="fa fa-envelope-o"></i> @Model.EmailCuaHang </a>
        </div>
        <form method="get" class="search-form" action="#">
            <label>
                <span class="screen-reader-text">Search for:</span>
                <input type="text" class="search-field vova" value="" name="s" title="Search for:">
            </label>
            <input type="submit" class="search-submit" value="Search">
            <input type="hidden" name="lang" value="en">
        </form>
    </div>
    <div id="top_panel_links">
        <div id="top_social_links_wrapper" class="expanded">
            <div class="share-toggle-button"><i class="share-icon fa fa-share-alt"></i></div>
            <div class="cws_social_links"><a href="Hannah Lib" class="cws_social_link" title="Twitter"><i class="share-icon fa fa-twitter"></i></a><a href="fb.com/hannahlib" class="cws_social_link" title="Facebook"><i class="share-icon fa fa-facebook"></i></a><a href="youtube.com/hannahlib" class="cws_social_link" title="Youtube"><i class="share-icon fa fa-youtube-play"></i></a></div>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <truongngu id="gioHangTam">

            </truongngu>
            @Html.Action("_UserInformation", "Users")
        }
        else
        {
            <div class="acc-top">
                <a class="button wc-forward account" href="/Users/Login"><i class="fa fa-sign-in"></i>Login</a>
                <a class="button wc-forward account" href="/Users/Register"><i class="fa fa-sign-in"></i>Register</a>
            </div>
        }
    </div>
    <div class="site_top_panel_toggle"></div>
</div>
