@model IEnumerable<DATA.Models.VideoSach>
@{
    ViewBag.Title = "BookPreview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .titlePreview {
        font-size: 25px;
        font-weight: bold;
    }
</style>
<div class="page">
    <div id="main" class="site-main">
        <div class="page_content">
            <div class="left-pattern pattern pattern-2" style="width: 154.5px;"></div>
            <main>
            </main>
            <div class="right-pattern pattern pattern-2" style="width: 154.5px;"></div>
            <div class="footer_image"></div>
        </div>
    </div>
    <section class='page_title wave'>
        <div class='container'>
            <div class='title'>
                <h1>Book Preview</h1>
            </div>
            <nav class="bread-crumbs"><a href="/home/index">Home</a><i class="delimiter fa fa-chevron-right"></i><span class="current">Book Preview</span></nav>
            <!-- .breadcrumbs -->
        </div>
        <canvas class='breadcrumbs' data-bg-color='#f8f2dc' data-line-color='#f9e8b2'></canvas>
    </section>

    

    <div id="main" class="site-main">
        <div class="page_content single_sidebar">

            <div class='left-pattern pattern pattern-2'></div>
            <div class='container'>
                <aside class='sb_right'>
                    @Html.Action("_TopRate", "Home")
                    <!-- \\ Top Rated Products -->
                    @Html.Action("_TopReader", "Home")
                </aside>

                <main>
                    <div class="grid_row">

                        <section class="news news-small">
                            <div class="cws_wrapper">
                                <div class='ce clearfix'>
                                    <h3 class="ce_title">How to earn erudite point?</h3>
                                    <p>The way to earn points is super easy and there are many different ways. So if you want to increase your accumulated points, please quickly follow the instructions in the article below.</p>
                                    <div class='ce clearfix'>
                                        <div class='cws_ce_content ce_toggle'>
                                            <div class='accordion_section'>
                                                <div class='accordion_title'><i class='accordion_icon'></i><span>Defaul Erudite Poin</span></div>
                                                <div class='accordion_content' style='display:none;'>
                                                    <p>Each reader who registers an account will get 100 points</p>
                                                </div>
                                            </div>
                                            <div class='accordion_section'>
                                                <div class='accordion_title'><i class='accordion_icon'></i><span>Erudite Earn Each Review </span></div>
                                                <div class='accordion_content' style='display:none;'>
                                                    <p>Readers who read books and rate books will receive an extra 50 points for each book</p>
                                                </div>
                                            </div>
                                            <div class='accordion_section'>
                                                <div class='accordion_title'><i class='accordion_icon'></i><span>Borrow and return books according to regulations</span></div>
                                                <div class='accordion_content' style='display:none;'>
                                                    <p></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                                <div class="grid">
                                    @foreach (var item in Model)
                                    {
                                        <article class='item small'>
                                            <div class='post_header_def_post'>
                                                <div class="date">
                                                    <div class='date-cont'><span class='day'>@item.NgayGuiDanhGia.Value.Day</span><span class='month' title='March'><span>@item.NgayGuiDanhGia.Value.Month</span></span><span class='year'>@item.NgayGuiDanhGia.Value.Year</span><i class='springs'></i></div>
                                                </div>
                                                <div class="post_info_header">
                                                    <h3 class="ce_title"><a href="/Book/BookPreviewDetail/@item.MaVideo">@item.TieuDeDanhGia</a></h3>
                                                </div>
                                            </div>
                                            <div class='media_info_wrapper'>
                                                <div class="media_part">
                                                    <div class="">
                                                        <div class="video">
                                                            @if (item.TenVideo.Contains("<iframe"))
                                                            {
                                                                <div>
                                                                    @Html.Raw(item.TenVideo.Replace("width=", "").Replace("height=", ""))
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <video class="" loop controls style="width:200px; ">
                                                                    <source src="@item.TenVideo" type="video/mp4" />
                                                                </video>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class='post_content_wrap'>
                                                <div class='post_content'>
                                                    @Html.Raw(item.NoiDungDanhGia)
                                                </div>
                                                <div class='meta_cont_wrapper'>
                                                    <div class="meta_cont">
                                                        <div class="post_info">
                                                            <div class="post_categories"><i class="fa fa-bookmark"></i><a href="@Url.Action("ReaderInfo", "Account", new { Email = item.EmailDanhGia})" rel="category tag"> @item.EmailDanhGia</a></div>
                                                        </div>
                                                        <div class="button_cont"><a href="/books/preview-detail/@item.MaVideo" class="cws_button small">Read More</a></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </article>
                                    }
                                </div>
                                <div class='pagination'>
                                    <div class='page_links'>
                                        <span class='page-numbers current'>1</span>
                                        <a class='page-numbers' href='#'>2</a>
                                        <a class="next page-numbers" href="#"><i class='fa fa-angle-right'></i></a>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </main>
            </div>
        </div>
    </div>
</div>

